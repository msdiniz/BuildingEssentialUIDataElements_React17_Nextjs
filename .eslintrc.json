{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react-hooks"],
  "rules": {
    "semi": [2, "always"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "@next/next/no-document-import-in-page": "off",
    "react/no-unknown-property": [
      2,
      {
        "ignore": [
          "jsx", "area-label"
        ]
      }
    ]  
  },
  "extends": [
    "next/core-web-vitals"
  ]
}